<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <web>
            <default_layouts>
                <default_category_layout/>
                <default_product_layout/>
                <default_cms_layout>1column</default_cms_layout>
            </default_layouts>
        </web>
        <checkout>
            <cart>
                <number_items_to_display_pager>100</number_items_to_display_pager>
            </cart>
        </checkout>
        <admin>
            <security>
                <session_lifetime>86400</session_lifetime>
            </security>
        </admin>
        <csp>
            <policies>
                <storefront>
                    <frame-ancestors>
                        <inline>0</inline>
                    </frame-ancestors>
                </storefront>
                <admin>
                    <frame-ancestors>
                        <inline>0</inline>
                    </frame-ancestors>
                </admin>
            </policies>
        </csp>
    </default>
</config>
